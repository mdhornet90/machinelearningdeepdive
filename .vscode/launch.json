    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${input:train_data_file_name}",
                "${input:test_data_file_name}"
            ]
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "train_data_file_name",
            "description": "The name of the training file"
        },
        {
            "type": "promptString",
            "id": "test_data_file_name",
            "description": "The name of the test file"
        }
    ]
}